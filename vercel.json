{
  "version": 2,
  "public": true,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "installCommand": "pnpm install --no-frozen-lockfile"
      }
    }
  ],
  "framework": "nextjs",
  "buildCommand": "pnpm run build",
  "env": {
    "NODE_OPTIONS": "--max-old-space-size=4096"
  }
}
